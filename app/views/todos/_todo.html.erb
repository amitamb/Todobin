<li id="todo_<%= todo.id %>" class="todo">
	<span title=<%=raw capitalise_sentense(todo[:text]).to_json %> class="todo_text" style="<%=   todo.complete ? "color:#565;text-decoration: line-through;" : "color:#211;" %>">
	<%= capitalise_sentense(todo[:text]) %></span>
	<% unless todo.complete %>
		<%= link_to "<input type='checkbox' style='display:inline-block;width:10px;height:10px;padding:0px;margin:0px;' />".html_safe, "#", complete_path: complete_todo_path(todo), class: "complete", style: "display:block;padding:0;margin:0;float:right;width:10px;height:10px;", onclick: '' %>
	<% else %>
		<%= link_to image_tag("closelabel.png", :style => "display:inline-block;width:8px;height:8px;padding:1px;margin:0px;"), todo, remote: true, method: :delete, style: "display:block;float:right;width:10px;height:10px;padding:0;margin:0;" %>
	<% end %>
</li>
